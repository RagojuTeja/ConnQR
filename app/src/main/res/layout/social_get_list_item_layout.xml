<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/lock_AppCompatImageButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/lock_icon" />


    <ImageView
        android:id="@+id/social_get_li_item_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/insta_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/social_get_li_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Insta"
        app:layout_constraintEnd_toEndOf="@+id/social_get_li_item_iv"
        app:layout_constraintStart_toStartOf="@+id/social_get_li_item_iv"
        app:layout_constraintTop_toBottomOf="@+id/social_get_li_item_iv" />




</androidx.constraintlayout.widget.ConstraintLayout>